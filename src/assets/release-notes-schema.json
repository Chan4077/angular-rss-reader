{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://edricchan03.github.io/rss-reader/schemas/release-notes-schema.json",
  "title": "Release notes JSON schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "latestVersion": {
      "$ref": "#/definitions/version",
      "description": "The latest version of the app."
    },
    "releases": {
      "$ref": "#/definitions/releases",
      "description": "A list of all releases."
    }
  },
  "required": ["latestVersion", "releases"],
  "definitions": {
    "version": {
      "type": "string",
      "pattern": "^(.[0-9]*){2,3}$"
    },
    "releases": {
      "type": "object",
      "patternProperties": {
        "^(.[0-9]*){2,3}$": {
          "$ref": "#/definitions/release"
        }
      }
    },
    "release": {
      "type": "object",
      "properties": {
        "releaseNotes": {
          "$ref": "#/definitions/releaseNotes"
        },
        "releaseDate": {
          "description": "The date the release was released at.",
          "oneOf": [
            {
              "type": "integer",
              "$comment": "Milliseconds since the Unix epoch."
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string"
            }
          ]
        },
        "releaseAuthor": {
          "description": "The author of the person who released the release.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "string",
              "format": "uri"
            }
          ]
        }
      },
      "required": ["releaseNotes"]
    },
    "releaseNotes": {
      "description": "Release notes for the specified version.",
      "type": "object",
      "properties": {
        "summary": {
          "description": "A summary of the release notes. Support markdown.",
          "$ref": "#/definitions/releaseNotesTypes"
        },
        "details": {
          "description": "A descriptive version of the release notes. Supports Markdown.",
          "$ref": "#/definitions/releaseNotesTypes"
        }
      },
      "required": ["summary"]
    },
    "releaseNotesTypes": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "contentMediaType": "text/html"
        },
        {
          "type": "string"
        }
      ]
    }
  }
}
